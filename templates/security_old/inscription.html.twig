{% extends 'base.html.twig' %}

{% block title %}Inscription sur SYMSHOP
{% endblock %}



            {% block body %}
            <div class="container">    
        <h1 class="display-4 text-center bg-primary text-white my-5 ">Inscription</h1>

         {{ form_start(form, {'attr' : { 'class' : 'col-md-7 col-lg-5 mx-auto' }})}}        
            {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password) }}
                        {{ form_row(form.confirm_password) }}
            </div>
            <button type="submit" class="btn btn-primary">Valider</button>

        {{ form_end(form) }}    
            
            {% endblock %}
            
   